<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhanghuakai.innovation.MainActivity">

    <Button
        android:id="@+id/firebase_btn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Click to change"
        app:layout_constraintTop_toBottomOf="@+id/email_filed"
        tools:layout_editor_absoluteX="120dp" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="259dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/email_filed"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/name_field"
        tools:layout_editor_absoluteX="63dp" />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_marginTop="103dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/firebase_btn"
        tools:layout_editor_absoluteX="49dp"
        tools:text="Name : " />

    <TextView
        android:id="@+id/message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/name_view"
        tools:layout_editor_absoluteX="49dp" />

</android.support.constraint.ConstraintLayout>
